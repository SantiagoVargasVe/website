---
import TopBar from "../components/shared/TopBar.astro";
import Footer from "../components/shared/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <meta name="title" content="Santiago Vargas Vega" />
    <meta
      name="description"
      content="Santiago Vargas is a Software developer. He develops full stack products for a whole variety of needs "
    />
    <meta name="keywords" content="Developer,Software,Engineer,Fullstack" />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />

    <title>{title}</title>
  </head>
  <body
    class="bg-slate-900 scroll-smooth py-4 px-5 lg:px-32 min-h-screen flex flex-col relative box-content"
  >
    <TopBar />
    <main class="lg:px-[20%]">
      <slot name="content" />
    </main>
    <Footer />
  </body>
</html>
